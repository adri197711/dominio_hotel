
{
  "extends" : "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,  
    "module": "commonjs",   
    "rootDir": "./src",     
    "moduleResolution": "node",
    "baseUrl": "./",           
    "paths": {
        "@project-example/domain/*": ["../../domain/src/*"]
    },                         
        "resolveJsonModule":true,                        
    "noEmit": false,                                    
    "outDir": "./dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
        "skipLibCheck": true
  },
   "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [{
    "path": "domain"
    }]
}